<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/list_item_design"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_id_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="123456"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_name_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="123456"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="@id/tv_id_txt"
        app:layout_constraintEnd_toStartOf="@id/tv_position_txt"
        app:layout_constraintTop_toBottomOf="@id/tv_id_txt"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_position_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="123456"
        android:padding="5dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/tv_name_txt"
        app:layout_constraintEnd_toEndOf="@id/tv_id_txt"
        app:layout_constraintTop_toTopOf="@id/tv_name_txt"
        app:layout_constraintBottom_toBottomOf="@id/tv_name_txt"/>

</androidx.constraintlayout.widget.ConstraintLayout>